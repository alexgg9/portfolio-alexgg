---
import SocialLinks from "./SocialLinks.astro";
---

<header>
  <div class="container">
    <div class="profile-container">
      <img
        src="/foto.jpg"
        alt="Alejandro G치lvez Garc칤a"
        class="profile-image"
      />
      <div>
        <h1 class="name">Alejandro G치lvez Garc칤a</h1>
        <h2 class="title">FullStack Developer</h2>
        <p class="location">游늸 C칩rdoba, Espa침a</p>
        <SocialLinks />
      </div>
    </div>
  </div>
</header>

<style>
  header {
    height: var(--header-height);
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
  }

  .profile-container {
    display: flex;
    align-items: center;
    gap: 3rem;
    margin-bottom: 2rem;
  }

  .profile-image {
    width: 240px;
    height: 240px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid #d6c1c1;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    transition:
      box-shadow 0.4s ease,
      transform 0.3s ease;
  }

  .profile-image:hover {
    box-shadow: 0 0 20px var(--color-primary, #4f46e5);
    transform: scale(1.03);
  }

  .name {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .title {
    font-size: 2rem;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .location {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #d6c1c1;
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  @media (max-width: 900px) {
    .profile-container {
      flex-direction: column;
      text-align: center;
    }

    .profile-image {
      width: 200px;
      height: 200px;
    }

    .name {
      font-size: 2.5rem;
    }

    .location {
      justify-content: center;
    }
  }
</style>
