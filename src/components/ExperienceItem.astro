---
const { title, company, date, description, location, modality } = Astro.props;
---

<div class="experience-item">
  <div class="line"></div>
  <div class="content">
    <h3>{title}</h3>
    <h4>{company}</h4>
    <span class="meta">{location} Â· {modality}</span>
    <span class="date">{date}</span>
    <p>{description}</p>
  </div>
</div>

<style>
  .experience-item {
    position: relative;
    padding-left: 2rem;
    margin-bottom: 3rem;
  }

  .experience-item .line {
    content: "";
    position: absolute;
    left: 0.5rem;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--color-primary, #4f46e5);
  }

  .experience-item::before {
    content: "";
    position: absolute;
    left: -0.2rem;
    top: 0.5rem;
    width: 1rem;
    height: 1rem;
    background-color: var(--color-primary, #4f46e5);
    border-radius: 50%;
    border: 2px solid white;
    box-shadow: 0 0 0 3px white;
  }

  .content h3 {
    margin: 0;
    font-size: 1.2rem;
  }

  .content h4 {
    margin: 0.2rem 0;
    font-weight: 500;
    color: #555;
  }

  .content .meta {
    font-size: 0.9rem;
    color: #666;
    display: block;
    margin-bottom: 0.2rem;
  }

  .content .date {
    font-size: 0.9rem;
    color: #888;
    display: block;
    margin-bottom: 0.5rem;
  }

  .content p {
    margin: 0;
    line-height: 1.6;
  }
</style>
